@model Collection

<form method="post" asp-action="Delete">
	<input asp-for="CollectionId" hidden />
	<div class="row">
        <div class="col-md-5 offset-4">
			<h2 class="text-primary">Delete Item</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="col-md-5 offset-4">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled class="form-control" />
		</div>
		<div class="col-md-5 offset-4">
			<label asp-for="Theme"></label>
			<input asp-for="Theme" disabled class="form-control" />
		</div>
		<div class="col-md-5 offset-4">
			<label asp-for="Description"></label>
			<input asp-for="Description" disabled class="form-control" />
		</div>
		<div class="col-md-5 offset-4">
		    <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		    <a asp-controller="Collections" asp-action="Index" class="btn btn-secondary" style="width:150px">
		    	Back to List
		    </a>
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}