@model Collection
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<form method="post" asp-controller="Collections" asp-action="Create" enctype="multipart/form-data">
<div class="row">
    <div class="col-md-5 offset-4">
	    <h2 class="text-primary">@Localizer["CreateCollection"]</h2>
	      <hr />
    </div>
	<div class="col-md-5 offset-4">
		<label asp-for="Name">@Localizer["Name"]</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="col-md-5 offset-4">
		<label asp-for="Theme">@Localizer["Theme"]</label>
		<select asp-for="Theme" class="form-control">
			<option value="Books">Books</option>
			<option value="Tv Series">TV Series</option>
			<option value="Guns">Guns</option>
			<option value="Music">Music</option>
			<option value="Games">Games</option>
		</select>
	</div>
	<div class="col-md-5 offset-4">
		<label asp-for="Description">@Localizer["Description"]</label>
		<textarea class="form-control" rows="3" asp-for="Description"></textarea>
		<span asp-validation-for="Description"></span>
	</div>
	<div class="col-md-5 offset-4">
		<label asp-for="Image" class="control-label">@Localizer["Image"]</label>
		<input type="file" asp-for="Image" class="form-control"/>
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>
	<div class="col-md-5 offset-4">
		<button type="submit" class="btn btn-primary" style="width:150px">@Localizer["Create"]</button>
		<a asp-controller="Collections" asp-action="Index" class="btn btn-secondary" style="width:150px">@Localizer["BackToCollections"]</a>
		</div>
</div>


</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}