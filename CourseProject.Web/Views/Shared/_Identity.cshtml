@inject UserManager<ApplicationUser> UserManager;


@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Auth" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Auth" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
}
else
{

    @*User profile section*@
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Users" asp-action="Index">
        <i class="bi bi-people"></i> List of Users
    </a>
    <span style="padding: 5px"></span>
    <form asp-controller="Auth" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-person-plus"></i> Log out
        </button>
    </form>
}
